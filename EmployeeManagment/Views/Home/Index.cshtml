@model IEnumerable<Employee>

@{
    @* we insert this in viewStart file in order to prevent code repeating
        Layout = "~/Views/shared/_Layout.cshtml";*@
    ViewBag.Title = "Employee List";
}

<div class=" card-deck">
    @foreach (var employee in Model)
    {
        var PhotoPath = "~/images/" + (employee.PhotoPath ?? "NoImage.jpg");

        <div class="card m-3" style="min-width:18rem; max-width: 30.5%;">

            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@PhotoPath" asp-append-version="true">
            <div class=" card-footer text-center">

                <a href="@Url.Action("details", "home", new {id = employee.Id})"
                   class="btn btn-primary m-1">show</a>

                <a href="#" class="btn btn-primary m-1">back</a>
                @Html.ActionLink("View", "details", "home", new { id = employee.Id })

                <a asp-controller="home" asp-action="DetailsModelView" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Dispaly</a>
                <a asp-action="edit" asp-controller="home"
                    asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>
            </div>
        </div>
    }
</div>

